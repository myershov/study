*
  box-sizing border-box
body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 14px
  line-height 1.42857143
  color #333
  background-color #fff
  margin 0
  min-width 414px
.h1, h1
  font-family inherit
  font-weight 500
  line-height 1.1
  color inherit
  margin 0
.h1, h1, button, input
  font-size 21px
.right
  float right
.left
  float left
.hidden, #hidden
  display none
.validationTrue
  &:before
    position absolute
    content '\2714'
    font-size 20px
    color green
    right 10px
    top 7px
    z-index 50
.validationFalse
  &:before
    position absolute
    content '\2718'
    font-size 20px
    color red
    right 10px
    top 7px
    z-index 50
// MODAL
.modal-header
  background-color silver
  height 50px
  border-top-left-radius 10px
  border-top-right-radius 10px
  img
    display inline-block
    width 30px
    margin 10px
    transform rotate(45deg)
  h1
    display inline-block
    width 280px
    margin-top 15px
    text-align center
    color white
    font-weight 500
  .pd-l
    padding-left 54px
  .pd-r
    padding-right 54px
